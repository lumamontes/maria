import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';

// Check if we have a custom OG image in public folder
const getOGImage = (image?: ImageMetadata | any) => {
	if (image) {
		// Handle both Astro ImageMetadata and direct URL strings
		const imageUrl = typeof image === 'string' ? image : image.src || image.url;
		if (imageUrl) return new URL(imageUrl, Astro.url);
	}
	// Use og.png from public folder if available, otherwise fallback
	return new URL('/og.png', Astro.url);
};
