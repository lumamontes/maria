---
import { LINKEDIN_URL, INSTAGRAM_URL } from '../consts';
const today = new Date();
---

<footer class="border-t border-gray-200 bg-white">
	<div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
		<div class="flex flex-col items-center justify-between space-y-4 md:flex-row md:space-y-0">
			<!-- Copyright -->
			<div class="text-sm text-gray-500">
				&copy; {today.getFullYear()} Maria P. All rights reserved.
			</div>
			
			<!-- Social Links -->
			<div class="flex items-center space-x-6">
				<a href={INSTAGRAM_URL} target="_blank" class="text-gray-400 hover:text-gray-500 transition-colors">
					<span class="sr-only">Instagram</span>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M7.75 2A5.75 5.75 0 002 7.75v4.5A5.75 5.75 0 007.75 18h4.5A5.75 5.75 0 0018 12.25v-4.5A5.75 5.75 0 0012.25 2h-4.5zM10 7a3 3 0 110 6 3 3 0 010-6zm4.25-.5a1.25 1.25 0 11-2.5 0 1.25 1.25 0 012.5 0z"></path>
					</svg>
				</a>
				<a href={LINKEDIN_URL} target="_blank" class="text-gray-400 hover:text-gray-500 transition-colors">
					<span class="sr-only">LinkedIn</span>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
					</svg>
				</a>
			</div>
		</div>

	</div>
</footer>
