---
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import Layot from '@/layouts/Layot.astro';
import ContactForm from '@/components/ContactForm';
---

<Layot title={`Contato - ${SITE_TITLE}`} description="Entre em contato com Maria Clara Prudêncio">
  <div class="bg-gray-50 min-h-screen">
    
    <!-- Hero Section -->
    <section class="bg-white py-16">
      <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl mb-6">
          Contato
        </h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Entre em contato com Maria para colaborações, entrevistas ou outras solicitações.
      </div>
    </section>
    
    <!-- Contact Form Section -->
    <section class="py-16">
      <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:px-8">
        <ContactForm client:load />
      </div>
    </section>
  </div>
</Layot>